@model IEnumerable<LigaPro_TallerClase.Models.Jugador>

@{
    ViewData["Title"] = "Inicio Jugadores";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" type=" button" class="btn btn-success">Crear Jugador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEquipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEquipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPlayer">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPlayer">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPlayer">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
