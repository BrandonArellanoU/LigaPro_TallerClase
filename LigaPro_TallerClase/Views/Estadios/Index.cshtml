@model IEnumerable<LigaPro_TallerClase.Models.Estadio>

@{
    ViewData["Title"] = "Inicio estadios";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" type=" button" class="btn btn-success">Crear Estadios</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEstadio">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEstadio">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEstadio">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
