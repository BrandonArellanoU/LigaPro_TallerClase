@model IEnumerable<LigaPro_TallerClase.Models.Equipo>

@{
    ViewData["Title"] = "Inicio Equipos";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" type=" button" class="btn btn-success">Crear Equipo</a>
    
</p>

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <!-- Indicadores (opcional) -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>

    <!-- Imágenes del Carrusel -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://ligapro.ec/wp-content/uploads/2024/04/BSC.png" class="d-block w-5" alt="Imagen 1 Barcelona">
        </div>
        <div class="carousel-item">
            <img src="https://ligapro.ec/wp-content/uploads/2024/04/CSE.png" class="d-block w-5" alt="Imagen 2 Emelec">
        </div>
        <div class="carousel-item">
            <img src="https://ligapro.ec/wp-content/uploads/2024/04/SDA.png" class="d-block w-5" alt="Imagen 3 Aucas">
        </div>
    </div>

    <!-- Controles de navegación (anterior/siguiente) -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AceptarExtranjeros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstadio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AceptarExtranjeros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEquipo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEquipo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEquipo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
